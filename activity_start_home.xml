<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_two"

    android:padding="16dp">

    <!-- Header Text -->

    <!-- Subtitle Text -->

    <!-- Login Button -->

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:background="#11F9FCFF"
        android:fontFamily="@font/bersiff"
        android:text="Carbon Footprint Calculator"
        android:textColor="#17202a"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="270dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="54dp"
        android:background="#11F9FCFF"
        android:fontFamily="@font/biryani"
        android:text="Reduce Your Carbon Footprint"
        android:textColor="#17202a"
        android:textSize="16sp" />

    <Button
        android:id="@+id/startHome_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startHome_signUp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btnlogin"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/startHome_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btnlogin"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</RelativeLayout>
